<h1>Log In</h1>

<%= form_with url: sessions_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email %><br />
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password %>
  </div>
  <div class="actions">
    <%= form.submit_tag "Log In" %>
  </div>
<% end %>